# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

#######################################
# Defaults
#######################################

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

#######################################
# Language-specific overrides
#######################################

# Markdown
[*.{md,mdx}]
indent_size = 2
trim_trailing_whitespace = false

# TOML
[*.{toml}]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2
